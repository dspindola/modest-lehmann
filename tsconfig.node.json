{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["bun"],
		"esModuleInterop": true,
		"verbatimModuleSyntax": true
	},
	"include": ["vite.config.ts", "env.d.ts"]
}
